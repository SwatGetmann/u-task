<p><%= link_to "Sign in with Twitter", "/auth/twitter" %></p>
<p><%= link_to "Sign in with GitHub", "/auth/github" %></p>
<p><%= link_to "Sign in with Facebook", "/auth/facebook" %></p>
<p><%= link_to "Sign in with VK", "/auth/vkontakte" %></p>

<p>
  <strong>Don&rsquo;t use these services?</strong>
  <%= link_to "Create an account", new_identity_path %> or login below.
</p>
  
<%= form_tag "/auth/identity/callback" do %>
  <div class="field">
    <%= label_tag :auth_key, "Email" %><br>
    <%= text_field_tag :auth_key %>
  </div>
  <div class="field">
    <%= label_tag :password %><br>
    <%= password_field_tag :password %>
  </div>
  <div class="actions"><%= submit_tag "Login" %></div>
<% end %>



