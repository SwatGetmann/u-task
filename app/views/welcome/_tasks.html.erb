<table class="table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Category</th>
      <th>Level</th>
      <th>Rating</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr class="info">
        <td><%= task.name %></td>
        <td><%= markdown(task.description) %></td>
        <td><%= task.show_category %></td>
        <td><%= task.show_level %></td>
        <td><%= task.rating %></td>
        <td><%= link_to 'Show', task %></td>
      </tr>
    <% end %>
  </tbody>
</table>