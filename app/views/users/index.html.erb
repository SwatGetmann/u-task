<h1>_USERS</h1>

<% @users.each do |user| %>
  <div class="col-md-3">
    <div class="col-md-12">
      <h3><%= user.name %></h3>
      <h4>_rating</h4>
      <h3><%= user.rating %></h3>
    </div>
    <%= link_to 'Show', user, class: "btn btn-success" %>
    <% if session[:user_id] == user.id %>
      <%= link_to 'Edit', edit_user_path(user), class: "btn btn-primary" %>
      <%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-warning" %>
    <% end %>
  </div>
<% end %>