<h1><%= t('.users') %></h1>

<% @users.each do |user| %>
  <div class="col-md-6 col-xs-12">
    <div class="col-md-6 col-xs-8 btn btn-default">
      <h3><%= user.name %></h3>
      <h4><%= t('.rating') %></h4>
      <h3><%= user.rating %></h3>
    </div>
    <div class="col-md-6 col-xs-4">
      <%= link_to t('.show-user'), user, class: "btn btn-success" %><br>
      <% if session[:user_id] == user.id %>
        <%= link_to t('.edit-user'), edit_user_path(user), class: "btn btn-primary" %><br>
        <%= link_to t('.destroy-user'), user, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-warning" %>
      <% end %>
    </div>
  </div>
<% end %>