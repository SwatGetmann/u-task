 <table>
	  <thead>
	    <tr>
	      <th>Name</th>
	      <th>Description</th>
	      <th>Category</th>
	      <th>Level</th>
	      <th>Rating</th>
	      <th colspan="3"></th>
	    </tr>
	  </thead>

	  <tbody>
	    <% @user.tasks.each do |task| %>
	      <tr>
	        <td><%= task.name %></td>
	        <td><%= task.description %></td>
	        <td><%= task.show_category %></td>
	        <td><%= task.show_level %></td>
	        <td><%= task.rating %></td>
	        <td><%= link_to 'Show More', user_task_path(@user, task) %></td>
	        <td><%= link_to 'Edit', edit_user_task_path(@user, task) %></td>
	        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
	      </tr>
	    <% end %>
	  </tbody>
</table>