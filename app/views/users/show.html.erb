<div class="container">
	<div class="col-md-12">
		<h1><%= @user.name %></h1>
		<h3><%= @user.email %></h3>
	</div>
	<% if session[:user_id] == @user.id %>
		<div class="col-md-12">
			<%= link_to new_user_task_path(@user), class: "btn btn-success" do %>
	    	<i class="glyphicon glyphicon-plus"></i> <%= t('.new-task') %>
	  	<% end %>
		</div>
	<% end %>
	<div class="col-md-12">
		<h5><%= t('.rating') %> :: <%= @user.rating %></h5>
		<% if !@user.tasks.empty? %>
		<h2><%= t('.user-tasks') %></h2>
		<%= render 'tasks' %>
		<% end %>
	</div>
	<div class="row"> 
	  <div class="col-md-12">
	    <br>
	    <% if session[:user_id] && session[:user_id] == @user.id %>
	    	<%= link_to t('.edit-user'), edit_user_path(@user), class: "btn btn-success" %> 
	    <% end %>
	    <%= link_to t(".back"), users_path, class: "btn btn-primary" %>
	  </div>
	</div>

</div>


