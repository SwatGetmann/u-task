<div class="row">
	<div class="col-md-6 col-xs-6">
		<div class="row">
			<div class="col-md-6">
				<h1><b><%= @user.name %></b></h1>
			</div>
			<div class="col-md-6">
				<h3><%= @user.email %></h3>
			</div>
		</div>
		<div class="row">
			<div class="col-md-12">
				<h2><%= t('.rating') %> :: <%= @user.rating %></h2>
			</div>
		</div>
	</div>
	<div class="col-md-6 col-xs-6">
		<div class="row">
			<div class="col-md-12 pad-top">
				<% if session[:user_id] == @user.id %>
				<%= link_to new_user_task_path(@user), class: "btn btn-success" do %>
		    	<i class="glyphicon glyphicon-plus"></i> <%= t('.new-task') %>
		    	<% end %>
			<% end %>
			</div>
		</div>
		<div class="row">
			<div class="col-md-12 pad-top">
				<% if session[:user_id] && session[:user_id] == @user.id %>
	    	<%= link_to t('.edit-user'), edit_user_path(@user), class: "btn btn-success" %> 
				<% end %>
			</div>
		</div>
		<div class="row">
			<div class="col-md-12 pad-top">
				<%= link_to t(".back"), users_path, class: "btn btn-primary" %>
			</div>
		</div>
	</div>
</div>

<div class="row">
	<div class="col-md-12">
		<% if !@user.tasks.empty? %>
			<h2><b><%= t('.user-tasks') %></b></h2>
			<%= render 'tasks' %>
		<% else %>
			<h2><b><%= t('.user-no-tasks') %></b></h2>
		<% end %>
	</div>
</div>
<br>
<div class="row">
	<div class="col-md-12">
		<%= link_to t(".back"), users_path, class: "btn btn-primary" %>
	</div>
</div>
