<!DOCTYPE html>
<html>
<head>
  <title>UTask</title>
  <%= stylesheet_link_tag 'application', "jquery-ui" %>
  <%= javascript_include_tag 'application', 'jquery-ui', 'autocomplete-rails', 'jquery' %>
  <%= csrf_meta_tags %>
</head>
<body>

<div id="main-container" class="container">
  <div class="row">
    <div id="sidebar" class="col-xs-3">
      <p><%= link_to "Users", users_path, class: 'btn-default' %></p>
      <p><%= link_to "Categories", categories_path, class: 'btn-default' %></p>
      <p><%= link_to "Levels", levels_path, class: 'btn-default' %></p>
      <p><%= link_to "Welcome Page", root_path, class: 'btn-default' %></p>
    </div>
    <div id="main-content" class="col-xs-9">
      <%= yield %>
    </div>
  </div>
</div>

<%= debug @task.tag_list if @task %>

</body>
</html>
