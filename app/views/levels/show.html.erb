<div class="row">
  <div class="col-md-12">
    <h1><b><%= @level.name %></b></h1>
    <h3><%= t('.how-hard') %> = <%= @level.value %></h3>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
  <% if @tasks %>
    <h2><%= t('.tasks') %></h2>
    <%= render 'layouts/tasks' %>
  <% end %>
  </div>
</div>

<div class="row"> 
  <div class="col-md-12">
    <br>
    <%= link_to t('.back'), levels_path, class: "btn btn-primary" %>
  </div>
</div>