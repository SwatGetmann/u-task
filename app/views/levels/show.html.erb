<div class="container">
  <div class="col-md-12">
    <h1><%= @level.name %></h1>
    <h3><%= t('.how-hard') %> = <%= @level.value %></h3>
  </div>
  <div class="row">
    <% if @tasks %>
      <h2><%= t('.tasks') %></h2>
      <%= render 'layouts/tasks' %>
    <% end %>
  </div>
</div>

<div class="row"> 
  <div class="col-md-12">
    <br>
    <%= link_to t('.back'), levels_path, class: "btn btn-primary" %>
  </div>
</div>