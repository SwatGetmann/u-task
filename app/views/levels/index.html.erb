<h1><%= t('.levels') %></h1>

<div class="row">
  <div class="col-md-12">
  <% @levels.each do |level| %>
    <div class="btn btn-default">
      <div class="col-md-12">
        <h3><%= link_to level.name, level_path(level) %></h3>
      </div>
      <div class="col-md-12">
        <h4><%= t('.how-hard') %> :: <%= level.value %></h4>
      </div>
    </div>
  <% end %>
  </div>
</div>
<br>
<div class="row">
  <div class = "col-md-12">
    <%= link_to t('.new-level'), new_level_path, class: "btn btn-success" %>
  </div>
</div>
