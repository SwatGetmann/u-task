<%= form_for(@task) do |f| %>
  <% if @task.errors.any? %>
    <div class="alert alert-danger">
      <h2><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h2>
      <ul>
      <% @task.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <form role="form">
    <div class="form-group">
      <%= f.label :name, t('.name') %><br>
      <%= f.text_field :name, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :description, t('.description') %><br>
      <%= f.text_area :description, class: "form-control",  rows: 10 %>
    </div>
    <div class="form-group">
      <%= f.label :category_id, t('.category') %><br>
      <%= f.collection_select :category_id, Category.all, :id, :name, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :level_id, t('.level') %><br>
      <%= f.collection_select :level_id, Level.all, :id, :name, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :tag_list, t('.tags') %><br>
      <%= f.autocomplete_field :tag_list, autocomplete_tag_name_tasks_path, :"data-delimiter" => ', ', class: "form-control" %> 
    </div>
    <div class="form-group">
      <%= f.label :answer, t('.answer') %><br>
      <%= f.text_field :answer, class: "form-control" %>
    </div>


    <div class="row">
      <div class="col-md-12">
        <br>
        <%= f.submit t('.submit') %>
      </div>
    </div>
  </form>
<% end %>