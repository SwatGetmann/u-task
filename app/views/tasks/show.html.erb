<div class="col-md-12">
  <div class="row">
    <div class="col-md-12">
      <h1><%= @task.name %></h1>
    </div>
    <div class="col-md-12">
      <% if @task.user && session[:user_id] == @task.user.id %>
        <%= link_to t('.edit'), edit_user_task_path(@task.user, @task), class: "btn btn-primary" %> 
        <%= link_to t('.destroy'), @task, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-warning" %> 
      <% end %>
    </div>
  </div>
  <div class="row">
    <% if !@task.tags.empty? %>
        <div class="col-md-12">
          <h4><%= t('.tags') %></h4>
          <%= @task.tag_list.map { |t| link_to t, tag_path(t), class: "btn btn-default" }.join(', ').html_safe %>
        </div>
    <% end %>
    <div class="col-md-4">
      <h4><%= t('.category') %></h4>
      <%= @task.show_category %>
    </div>
    <div class="col-md-4">
      <h4><%= t('.level') %></h4>
      <%= @task.show_level %>
    </div>
    <div class="col-md-4">
      <h4><%= t('.rating') %></h4>
      <%= @task.rating %>
    </div>
    <div class="col-md-4">
      <% if @task.user %>
        <h4><%= t('.author') %></h4>
        <%= link_to @task.user.name, @task.user, class: "btn btn-default" %>
      <% end %>
    </div>
    
    <div class="col-md-12">
      <% if session[:user_id] %> 
        <% if session[:user_id] == @task.user.id %>
          
          <h4><%= t('.answer') %></h4>
          <%= @task.answer %>

        <% else %>

          <% if current_user.gave_correct_answer?(@task) %>
            You gave right answer: <%= @task.answer %>!
          <% else %>
            You didn't give a right answer yet.
            <%= link_to t('.give-answer'), user_task_answer_path(@task.user, @task), class: "btn btn-primary" %>
          <% end %>
        <% end %>
      <% else %>
        You have to <%= link_to t('.signin'), login_path %> to answer this task.
      <% end %>
    </div>

  </div>
  <div class="description">
    <%= markdown(@task.description) %>
  </div>

  <div class="comments container">
    <% if !@task.comments.empty? %>
      <h3><%= t('.comments') %></h3>
        <% @task.comments.each do |f| %>
        <p>
          <h4><%= f.user.name if f.user %></h4>
        </p>
        <p>
          <h3><%= f.title if f %></h3>
        </p>
        <p>
          <div><%= t('.comment') %><%= f.comment if f %></div>
        </p>
        <% end %>
    <% end %>
  </div>

</div>

<div class="row"> 
  <div class="col-md-12">
    <br>
    <%= link_to t('.back'), user_tasks_path(@task.user), class: "btn btn-primary" %>
  </div>
</div>