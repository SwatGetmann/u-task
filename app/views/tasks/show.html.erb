<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @task.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @task.description %>
</p>

<p>
  <strong>Category:</strong>
  <%= @task.category.name %>
</p>

<p>
  <strong>Level:</strong>
  <%= @task.level.name %>
</p>

<p>
  <strong>Rating:</strong>
  <%= @task.rating %>
</p>

<%= render 'author' %>

<% if !@task.tags.empty? %>
<p>
  <strong>Tags:</strong>
  <% @task.tag_list.each do |f| %>
  <%= f %>, 
  <% end %>
</p>
<% end %>

<% if !@task.comments.empty? %>
  <strong>COMMENTS</strong>
  <p>
    <% @task.comments.each do |f| %>
    <p>User : <%= f.user.name if f.user %>  </p>
    <p>Title : <%= f.title if f %></p>
    <p>Comment : <%= f.comment if f %></p>
    <% end %>
  </p>
<% end %>

<%= link_to 'Edit', edit_task_path(@task) %> |
<%= link_to 'Back', tasks_path %>
